<header class="sticky top-0 z-50 backdrop-blur-md bg-transparent">
  <div class="mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-20">
      <a href="/" class="flex items-center space-x-2 text-accent-400">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-8 h-8">
          <path d="M11.7 2.805a.75.75 0 01.6 0A60.65 60.65 0 0122.83 8.72a.75.75 0 01-.231 1.337 49.949 49.949 0 00-9.902 3.912l-.003.002-.34.18a.75.75 0 01-.707 0A50.009 50.009 0 007.5 12.174v-.224c0-.131.067-.248.172-.311a54.614 54.614 0 014.653-2.52.75.75 0 00-.65-1.352 56.129 56.129 0 00-4.78 2.589 1.858 1.858 0 00-.859 1.228 49.803 49.803 0 00-4.634-1.527.75.75 0 01-.231-1.337A60.653 60.653 0 0111.7 2.805z" />
          <path d="M13.06 15.473a48.45 48.45 0 017.666-3.282c.134 1.414.22 2.843.255 4.285a.75.75 0 01-.46.71 47.878 47.878 0 00-8.105 4.342.75.75 0 01-.832 0 47.877 47.877 0 00-8.104-4.342.75.75 0 01-.461-.71c.035-1.442.121-2.87.255-4.286A48.4 48.4 0 016 13.18v1.27a1.5 1.5 0 00-.14 2.508c-.09.38-.222.753-.397 1.11.452.213.901.434 1.346.661a6.729 6.729 0 00.551-1.608 1.5 1.5 0 00.14-2.67v-.645a48.549 48.549 0 013.44 1.668 2.25 2.25 0 002.12 0z" />
          <path d="M4.462 19.462c.42-.419.753-.89 1-1.394.453.213.902.434 1.347.661a6.743 6.743 0 01-1.286 1.794.75.75 0 11-1.06-1.06z" />
        </svg>
        <span class="font-serif text-xl sm:text-2xl font-semibold tracking-wider">Akashic Readings Madrid</span>
      </a>
      
      <!-- Mobile menu button -->
      <div class="flex md:hidden">
        <button type="button" id="mobile-menu-button" class="text-white hover:text-accent-300">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" class="w-6 h-6">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
      
      <!-- Desktop Navigation -->
      <nav class="hidden md:flex md:items-center md:space-x-8">
        <a href="/" class="text-white hover:text-accent-300 px-3 py-2 text-sm font-medium transition-colors duration-300">Home</a>
        <a href="/services" class="text-white hover:text-accent-300 px-3 py-2 text-sm font-medium transition-colors duration-300">Services</a>
        <a href="/about" class="text-white hover:text-accent-300 px-3 py-2 text-sm font-medium transition-colors duration-300">About</a>
        <a href="/testimonials" class="text-white hover:text-accent-300 px-3 py-2 text-sm font-medium transition-colors duration-300">Testimonials</a>
        <a href="/contact" class="text-white hover:text-accent-300 px-3 py-2 text-sm font-medium transition-colors duration-300">Contact</a>
        <a href="/book" class="gradient-button bg-gradient-to-r from-primary-600 to-secondary-500 text-white font-medium px-4 py-2 rounded-lg transition-all duration-300">
          Book a Reading
        </a>
      </nav>
    </div>
    
    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="md:hidden hidden">
      <div class="glass-card px-2 pt-2 pb-3 space-y-1 sm:px-3 rounded-lg mt-2">
        <a href="/" class="text-white block px-3 py-2 rounded-md text-base font-medium hover:bg-primary-900 hover:text-accent-300 transition-colors duration-300">Home</a>
        <a href="/services" class="text-white block px-3 py-2 rounded-md text-base font-medium hover:bg-primary-900 hover:text-accent-300 transition-colors duration-300">Services</a>
        <a href="/about" class="text-white block px-3 py-2 rounded-md text-base font-medium hover:bg-primary-900 hover:text-accent-300 transition-colors duration-300">About</a>
        <a href="/testimonials" class="text-white block px-3 py-2 rounded-md text-base font-medium hover:bg-primary-900 hover:text-accent-300 transition-colors duration-300">Testimonials</a>
        <a href="/contact" class="text-white block px-3 py-2 rounded-md text-base font-medium hover:bg-primary-900 hover:text-accent-300 transition-colors duration-300">Contact</a>
        <a href="/book" class="gradient-button bg-gradient-to-r from-primary-600 to-secondary-500 text-white block px-3 py-2 rounded-md text-base font-medium mt-4">Book a Reading</a>
      </div>
    </div>
  </div>
</header>

<script>
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  if (mobileMenuButton && mobileMenu) {
    mobileMenuButton.addEventListener('click', () => {
      mobileMenu.classList.toggle('hidden');
    });
  }
</script>