<section class="py-16 md:py-24 relative" id="contact">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
      <div data-aos="fade-right">
        <h2 class="text-3xl sm:text-4xl font-serif font-semibold mb-6 bg-gradient-to-r from-white via-accent-200 to-white inline-block text-transparent bg-clip-text">
          Start Your Journey
        </h2>
        <div class="divider w-24 mb-6"></div>
        
        <p class="text-gray-300 mb-8">
          Ready to explore your Akashic Records? Reach out to schedule a reading or ask any questions you may have about the process.
        </p>
        
        <div class="glass-card p-8 rounded-xl mb-8">
          <div class="flex items-start mb-6">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-6 h-6 text-accent-400 mr-4 mt-1">
              <path fill-rule="evenodd" d="M11.54 22.351l.07.04.028.016a.76.76 0 00.723 0l.028-.015.071-.041a16.975 16.975 0 001.144-.742 19.58 19.58 0 002.683-2.282c1.944-1.99 3.963-4.98 3.963-8.827a8.25 8.25 0 00-16.5 0c0 3.846 2.02 6.837 3.963 8.827a19.58 19.58 0 002.682 2.282 16.975 16.975 0 001.145.742zM12 13.5a3 3 0 100-6 3 3 0 000 6z" clip-rule="evenodd" />
            </svg>
            <div>
              <h3 class="text-white font-medium mb-1">Location</h3>
              <p class="text-gray-300">Seattle, Washington<br />Remote readings available worldwide</p>
            </div>
          </div>
          
          <div class="flex items-start mb-6">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-6 h-6 text-accent-400 mr-4 mt-1">
              <path fill-rule="evenodd" d="M1.5 4.5a3 3 0 013-3h1.372c.86 0 1.61.586 1.819 1.42l1.105 4.423a1.875 1.875 0 01-.694 1.955l-1.293.97c-.135.101-.164.249-.126.352a11.285 11.285 0 006.697 6.697c.103.038.25.009.352-.126l.97-1.293a1.875 1.875 0 011.955-.694l4.423 1.105c.834.209 1.42.959 1.42 1.82V19.5a3 3 0 01-3 3h-2.25C8.552 22.5 1.5 15.448 1.5 6.75V4.5z" clip-rule="evenodd" />
            </svg>
            <div>
              <h3 class="text-white font-medium mb-1">Phone</h3>
              <p class="text-gray-300">+1 (555) 123-4567</p>
            </div>
          </div>
          
          <div class="flex items-start">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-6 h-6 text-accent-400 mr-4 mt-1">
              <path d="M1.5 8.67v8.58a3 3 0 003 3h15a3 3 0 003-3V8.67l-8.928 5.493a3 3 0 01-3.144 0L1.5 8.67z" />
              <path d="M22.5 6.908V6.75a3 3 0 00-3-3h-15a3 3 0 00-3 3v.158l9.714 5.978a1.5 1.5 0 001.572 0L22.5 6.908z" />
            </svg>
            <div>
              <h3 class="text-white font-medium mb-1">Email</h3>
              <p class="text-gray-300">contact@akashicreadings.com</p>
            </div>
          </div>
        </div>
        
        <div class="glass-card p-8 rounded-xl">
          <h3 class="text-white font-medium text-xl mb-4 font-serif">Business Hours</h3>
          <div class="space-y-2">
            <div class="flex justify-between">
              <span class="text-gray-300">Monday - Friday</span>
              <span class="text-gray-300">10:00 AM - 6:00 PM PST</span>
            </div>
            <div class="flex justify-between">
              <span class="text-gray-300">Saturday</span>
              <span class="text-gray-300">11:00 AM - 4:00 PM PST</span>
            </div>
            <div class="flex justify-between">
              <span class="text-gray-300">Sunday</span>
              <span class="text-gray-300">Closed</span>
            </div>
          </div>
        </div>
      </div>
      
      <div data-aos="fade-left">
        <div class="glass-card p-8 rounded-xl">
          <h3 class="text-white font-medium text-xl mb-6 font-serif">Send a Message</h3>
          
          <form id="contactForm" class="space-y-6">
            <div>
              <label for="name" class="block text-sm font-medium text-gray-300 mb-1">Your Name</label>
              <input
                type="text"
                id="name"
                name="name"
                class="w-full px-4 py-3 bg-white/5 border border-white/10 rounded-lg focus:ring-2 focus:ring-accent-400 focus:border-transparent text-white"
                placeholder="Enter your name"
                required
              />
            </div>
            
            <div>
              <label for="email" class="block text-sm font-medium text-gray-300 mb-1">Email Address</label>
              <input
                type="email"
                id="email"
                name="email"
                class="w-full px-4 py-3 bg-white/5 border border-white/10 rounded-lg focus:ring-2 focus:ring-accent-400 focus:border-transparent text-white"
                placeholder="Enter your email"
                required
              />
            </div>
            
            <div>
              <label for="service" class="block text-sm font-medium text-gray-300 mb-1">Service of Interest</label>
              <select
                id="service"
                name="service"
                class="w-full px-4 py-3 bg-white/5 border border-white/10 rounded-lg focus:ring-2 focus:ring-accent-400 focus:border-transparent text-white"
                required
              >
                <option value="" disabled selected>Select a service</option>
                <option value="soul-purpose">Soul Purpose Reading</option>
                <option value="past-life">Past Life Exploration</option>
                <option value="relationship">Relationship Reading</option>
                <option value="career">Career & Life Path</option>
                <option value="other">Other</option>
              </select>
            </div>
            
            <div>
              <label for="message" class="block text-sm font-medium text-gray-300 mb-1">Your Message</label>
              <textarea
                id="message"
                name="message"
                rows="4"
                class="w-full px-4 py-3 bg-white/5 border border-white/10 rounded-lg focus:ring-2 focus:ring-accent-400 focus:border-transparent text-white"
                placeholder="Share any questions or details about what you're seeking..."
                required
              ></textarea>
            </div>
            
            <button
              type="submit"
              class="gradient-button bg-gradient-to-r from-primary-600 to-secondary-500 text-white font-medium px-6 py-3 rounded-lg shadow-lg transition-all duration-300 w-full"
            >
              Send Message
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const contactForm = document.getElementById('contactForm');
    
    if (contactForm) {
      contactForm.addEventListener('submit', (e) => {
        e.preventDefault();
        
        // Simulate form submission
        const submitButton = contactForm.querySelector('button[type="submit"]');
        const originalText = submitButton.textContent;
        
        submitButton.disabled = true;
        submitButton.textContent = 'Sending...';
        
        // Simulated delay to show loading state
        setTimeout(() => {
          // Reset form
          contactForm.reset();
          
          // Show success message
          submitButton.textContent = 'Message Sent!';
          submitButton.classList.add('bg-green-600');
          
          // Reset button after delay
          setTimeout(() => {
            submitButton.textContent = originalText;
            submitButton.disabled = false;
            submitButton.classList.remove('bg-green-600');
          }, 3000);
        }, 1500);
      });
    }
  });
</script>