---
import Layout from '../layouts/Layout.astro';
import Services from '../components/Services.astro';
import CTASection from '../components/CTASection.astro';

const services = [
  {
    title: "Soul Purpose Reading",
    description: "This comprehensive reading focuses on your soul's mission in this lifetime. We'll explore your unique gifts, talents, and the lessons you're here to master. You'll gain clarity on your spiritual path and practical guidance on how to align with your highest purpose.",
    includes: [
      "Identification of your soul's primary mission",
      "Exploration of your spiritual gifts and how to develop them",
      "Insight into the lessons and themes of your current incarnation",
      "Guidance on overcoming blocks to fulfilling your purpose",
      "Practical steps to align with your soul's path"
    ],
    price: "$150",
    duration: "60 minutes",
    image: "https://images.pexels.com/photos/3758104/pexels-photo-3758104.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2"
  },
  {
    title: "Past Life Exploration",
    description: "Dive deeply into significant past lives that are influencing your current experiences. This reading helps resolve karmic patterns, heal ancestral wounds, and release energetic blocks that may be holding you back from your full potential.",
    includes: [
      "Connection with 2-3 significant past lives relevant to current challenges",
      "Identification of recurring patterns and themes across lifetimes",
      "Understanding of karmic relationships with key people in your life",
      "Healing of past life traumas affecting your present",
      "Integration techniques for past life wisdom"
    ],
    price: "$175",
    duration: "75 minutes",
    image: "https://images.pexels.com/photos/3761464/pexels-photo-3761464.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2"
  },
  {
    title: "Relationship Reading",
    description: "Gain deeper insight into the soul contracts and karmic ties in your relationships. This reading is valuable for understanding romantic partnerships, family dynamics, friendships, or business relationships from a soul perspective.",
    includes: [
      "Exploration of the soul contract with your partner/person of interest",
      "Insight into karmic patterns and their purpose in the relationship",
      "Identification of growth opportunities and challenges",
      "Guidance for healing and strengthening the connection",
      "Tools for conscious relating and communication"
    ],
    price: "$150",
    duration: "60 minutes",
    image: "https://images.pexels.com/photos/3075761/pexels-photo-3075761.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2"
  },
  {
    title: "Career & Life Path",
    description: "Align with your soul's blueprint for career fulfillment and material success. This reading provides guidance on career decisions, timing for changes, and opportunities that resonate with your highest good.",
    includes: [
      "Insight into your soul's preferred expression in the material world",
      "Guidance on career choices aligned with your spiritual path",
      "Timing advice for transitions and new beginnings",
      "Identification of potential obstacles and how to overcome them",
      "Strategies for creating abundance while staying true to your values"
    ],
    price: "$150",
    duration: "60 minutes",
    image: "https://images.pexels.com/photos/3760810/pexels-photo-3760810.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2"
  }
];
---

<Layout 
  title="Akashic Record Reading Services | Soul Guidance"
  description="Explore our Akashic Record reading services including soul purpose readings, past life exploration, relationship readings, and career guidance."
>
  <div class="py-16 md:py-24">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16" data-aos="fade-up">
        <h1 class="text-4xl sm:text-5xl font-serif font-semibold mb-6 bg-gradient-to-r from-white via-accent-200 to-white inline-block text-transparent bg-clip-text">
          Akashic Record Reading Services
        </h1>
        <div class="divider mx-auto w-24"></div>
        <p class="text-gray-300 max-w-3xl mx-auto text-lg">
          Each reading is uniquely tailored to your soul's journey, providing clarity, healing, and empowerment through access to your Akashic Records.
        </p>
      </div>
    </div>
  </div>
  
  <section class="pb-16 md:pb-24 relative">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      {services.map((service, index) => (
        <div class="mb-20 last:mb-0">
          <div class={`grid grid-cols-1 lg:grid-cols-2 gap-12 items-center ${index % 2 === 1 ? 'lg:grid-flow-dense' : ''}`}>
            <div data-aos={index % 2 === 0 ? "fade-right" : "fade-left"} class={index % 2 === 1 ? 'lg:col-start-2' : ''}>
              <h2 class="text-3xl sm:text-4xl font-serif font-semibold mb-6 bg-gradient-to-r from-white via-accent-200 to-white inline-block text-transparent bg-clip-text">
                {service.title}
              </h2>
              <div class="divider w-24 mb-6"></div>
              
              <div class="flex items-center text-sm text-gray-300 mb-4">
                <span class="mr-6 bg-primary-900/50 px-3 py-1 rounded-full">{service.price}</span>
                <span class="flex items-center">
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-4 h-4 mr-1 text-accent-400">
                    <path fill-rule="evenodd" d="M12 2.25c-5.385 0-9.75 4.365-9.75 9.75s4.365 9.75 9.75 9.75 9.75-4.365 9.75-9.75S17.385 2.25 12 2.25zM12.75 6a.75.75 0 00-1.5 0v6c0 .414.336.75.75.75h4.5a.75.75 0 000-1.5h-3.75V6z" clip-rule="evenodd" />
                  </svg>
                  {service.duration}
                </span>
              </div>
              
              <p class="text-gray-300 mb-6">
                {service.description}
              </p>
              
              <div class="glass-card rounded-xl p-6 mb-6">
                <h3 class="text-lg font-medium text-white mb-4">What's Included:</h3>
                <ul class="space-y-2">
                  {service.includes.map((item) => (
                    <li class="flex items-start">
                      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5 text-accent-400 mr-3 mt-0.5 flex-shrink-0">
                        <path fill-rule="evenodd" d="M2.25 12c0-5.385 4.365-9.75 9.75-9.75s9.75 4.365 9.75 9.75-4.365 9.75-9.75 9.75S2.25 17.385 2.25 12zm13.36-1.814a.75.75 0 10-1.22-.872l-3.236 4.53L9.53 12.22a.75.75 0 00-1.06 1.06l2.25 2.25a.75.75 0 001.14-.094l3.75-5.25z" clip-rule="evenodd" />
                      </svg>
                      <span class="text-gray-300">{item}</span>
                    </li>
                  ))}
                </ul>
              </div>
              
              <a href="/book" class="gradient-button bg-gradient-to-r from-primary-600 to-secondary-500 text-white font-medium px-6 py-3 rounded-lg shadow-lg transition-all duration-300 inline-block">
                Book This Service
              </a>
            </div>
            
            <div class="relative" data-aos={index % 2 === 0 ? "fade-left" : "fade-right"} class={index % 2 === 1 ? 'lg:col-start-1' : ''}>
              <div class="absolute inset-0 bg-gradient-to-br from-primary-500/30 to-secondary-500/30 rounded-2xl blur-xl"></div>
              <img 
                src={service.image} 
                alt={service.title} 
                class="relative z-10 rounded-2xl w-full h-auto object-cover shadow-2xl"
              />
            </div>
          </div>
        </div>
      ))}
    </div>
  </section>
  
  <section class="py-16 md:py-24 relative bg-gradient-to-b from-transparent to-primary-950/50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16" data-aos="fade-up">
        <h2 class="text-3xl sm:text-4xl font-serif font-semibold mb-6 bg-gradient-to-r from-white via-accent-200 to-white inline-block text-transparent bg-clip-text">
          Special Packages
        </h2>
        <div class="divider mx-auto w-24 mb-6"></div>
        <p class="text-gray-300 max-w-3xl mx-auto">
          Save when you book multiple sessions or choose a specialized package.
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <div class="glass-card rounded-xl p-8" data-aos="fade-up">
          <h3 class="text-2xl font-serif font-medium text-white mb-4">Soul Journey Package</h3>
          <p class="text-gray-300 mb-6">
            A comprehensive three-session journey to explore your soul's past, present, and future. Includes a Past Life Exploration, Soul Purpose Reading, and a follow-up integration session.
          </p>
          <div class="flex justify-between items-center mb-6">
            <span class="text-xl text-accent-300 font-medium">$425</span>
            <span class="text-gray-400 line-through">$475 value</span>
          </div>
          <a href="/book" class="gradient-button bg-gradient-to-r from-primary-600 to-secondary-500 text-white font-medium px-6 py-3 rounded-lg shadow-lg transition-all duration-300 block text-center">
            Book This Package
          </a>
        </div>
        
        <div class="glass-card rounded-xl p-8" data-aos="fade-up" data-aos-delay="100">
          <h3 class="text-2xl font-serif font-medium text-white mb-4">Life Transformation Bundle</h3>
          <p class="text-gray-300 mb-6">
            A six-month journey of transformation. Includes four readings (spaced 6-8 weeks apart) plus email support between sessions for ongoing integration and guidance.
          </p>
          <div class="flex justify-between items-center mb-6">
            <span class="text-xl text-accent-300 font-medium">$525</span>
            <span class="text-gray-400 line-through">$600 value</span>
          </div>
          <a href="/book" class="gradient-button bg-gradient-to-r from-primary-600 to-secondary-500 text-white font-medium px-6 py-3 rounded-lg shadow-lg transition-all duration-300 block text-center">
            Book This Package
          </a>
        </div>
      </div>
    </div>
  </section>
  
  <CTASection />
</Layout>