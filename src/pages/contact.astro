---
import Layout from '../layouts/Layout.astro';
import ContactForm from '../components/ContactForm.astro';
---

<Layout 
  title="Contact | Akashic Record Readings Madrid"
  description="Get in touch to book an Akashic Record reading or ask questions about the services offered. Reach out for spiritual guidance and soul insights."
>
  <div class="py-16 md:py-24">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16" data-aos="fade-up">
        <h1 class="text-4xl sm:text-5xl font-serif font-semibold mb-6 bg-gradient-to-r from-white via-accent-200 to-white inline-block text-transparent bg-clip-text">
          Contact Me
        </h1>
        <div class="divider mx-auto w-24"></div>
        <p class="text-gray-300 max-w-3xl mx-auto text-lg">
          Have questions or ready to book a reading? I'm here to help you on your journey.
        </p>
      </div>
    </div>
  </div>
  
  <ContactForm />
</Layout>